<h1>Contact Form</h1>

<form method="POST" action="/contacts">
  <div>
    <label>Name:</label>
    <input type="text" name="name" />
  </div>
  <div>
    <label>Email:</label>
    <input type="text" name="email" />
  </div>
  <div>
    <label>Enquiry:</label>
    <textarea name="enquiry"></textarea>
  </div>
  <div>
    <input type="submit" value="Send Form" />
  </div>

</form>